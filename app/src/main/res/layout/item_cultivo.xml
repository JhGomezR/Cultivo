<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="?attr/colorControlHighlight"
        android:elevation="@dimen/cardview_default_radius"
        android:orientation="vertical"
        android:theme="@style/Animation.AppCompat.DropDownUp">
        <!--municipios,cultivo,maxCasos,muni-->

        <TextView
            android:id="@+id/grupo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="28dp"
            android:layout_y="20dp"
            android:text="Grupo :"
            android:textColor="@android:color/holo_orange_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cultivo"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_x="140dp"
            android:layout_y="52dp"
            android:text="Datos Open"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/ncultivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="27dp"
            android:layout_y="53dp"
            android:text="Cultivo :"
            android:textColor="@android:color/holo_orange_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/grupo_de_cultivo"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_x="122dp"
            android:layout_y="21dp"
            android:text="Datos Open"
            android:textAppearance="@style/TextAppearance.AppCompat" />
    </AbsoluteLayout>

</android.support.v7.widget.CardView>